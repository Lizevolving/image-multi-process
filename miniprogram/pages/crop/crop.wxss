/* crop.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #000;
}

.crop-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.cropper-container {
  flex: 1;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.crop-image {
  position: absolute;
  z-index: 1;
  transform-origin: center;
}

.crop-frame {
  position: absolute;
  z-index: 3;
  box-sizing: border-box;
}

/* 裁剪框四角 */
.corner {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-color: #fff;
  border-style: solid;
  z-index: 4;
}

.top-left {
  top: -2rpx;
  left: -2rpx;
  border-width: 4rpx 0 0 4rpx;
}

.top-right {
  top: -2rpx;
  right: -2rpx;
  border-width: 4rpx 4rpx 0 0;
}

.bottom-left {
  bottom: -2rpx;
  left: -2rpx;
  border-width: 0 0 4rpx 4rpx;
}

.bottom-right {
  bottom: -2rpx;
  right: -2rpx;
  border-width: 0 4rpx 4rpx 0;
}

/* 裁剪框边框 */
.border {
  position: absolute;
  border: 1px solid rgba(255, 255, 255, 0.8);
  z-index: 3;
}

.top {
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: none;
  border-left: none;
  border-right: none;
}

.right {
  top: 0;
  right: 0;
  height: 100%;
  border-top: none;
  border-bottom: none;
  border-left: none;
}

.bottom {
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: none;
  border-left: none;
  border-right: none;
}

.left {
  top: 0;
  left: 0;
  height: 100%;
  border-top: none;
  border-bottom: none;
  border-right: none;
}

/* 网格线 */
.grid-line {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5);
  z-index: 3;
}

.h1, .h2 {
  width: 100%;
  height: 1rpx;
}

.h1 {
  top: 33.3%;
}

.h2 {
  top: 66.6%;
}

.v1, .v2 {
  height: 100%;
  width: 1rpx;
}

.v1 {
  left: 33.3%;
}

.v2 {
  left: 66.6%;
}

/* 遮罩层 */
.crop-mask {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 2;
}

/* 提示文字 */
.crop-tip {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

/* 底部操作按钮 */
.crop-actions {
  width: 100%;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #000;
}

.btn {
  flex: 1;
  margin: 0 30rpx;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.cancel {
  color: #fff;
  background-color: #666;
}

.confirm {
  color: #fff;
  background-color: #07c160;
} 