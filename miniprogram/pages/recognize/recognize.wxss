/**recognize.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 页面标题 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 上传区域样式 */
.upload-area {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 图片预览样式 */
.image-preview-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-preview {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 自定义提示输入区 */
.custom-prompt-container {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.prompt-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
}

.toggle-icon {
  width: 36rpx;
  height: 36rpx;
}

.prompt-input-area {
  margin-top: 16rpx;
}

.prompt-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.prompt-tip {
  font-size: 24rpx;
  color: #999;
}

/* 错误提示 */
.error-message {
  width: 100%;
  padding: 20rpx;
  background-color: #ffebee;
  color: #f44336;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 操作按钮 */
.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  width: 48%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.primary {
  background-color: #07c160;
  color: #fff;
}

.secondary {
  background-color: #f8f9fa;
  color: #333;
  border: 1rpx solid #ddd;
}

/* 加载状态 */
.loading-container {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: #666;
}

/* 结果展示 */
.result-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.result-image {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.result-segments {
  width: 100%;
}

.segment-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.segment-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.segment-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.objects-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.object-tag {
  background-color: #e8f5e9;
  color: #2e7d32;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.full-result {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.full-result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.full-result-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.tip-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  background-color: #fff3e0;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff9800;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 20rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #333;
}

.coming-soon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
}

.coming-soon-img {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.coming-soon-text {
  font-size: 36rpx;
  color: #999;
  font-weight: bold;
} 