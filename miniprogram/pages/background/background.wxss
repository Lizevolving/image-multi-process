/**background.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.note-box {
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #e8f5e9;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.note-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2ecc71;
  margin-bottom: 10rpx;
}

.note-content {
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: column;
}

.note-api {
  color: #2ecc71;
  margin-top: 10rpx;
  text-decoration: underline;
}

.quota-info {
  width: 90%;
  margin: 10rpx 0 20rpx;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
}

.quota-info text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.quota-info progress {
  margin-top: 8rpx;
}

.image-container {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-placeholder {
  width: 300rpx;
  height: 300rpx;
  border: 2rpx dashed #2ecc71;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #f8f9fa;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #2ecc71;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #666;
}

.selected-image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.image-info {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.8;
}

.process-button {
  background-color: #2ecc71;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  width: 80%;
  transition: opacity 0.3s;
}

.process-button:active {
  opacity: 0.8;
}

.process-button[disabled] {
  background-color: #ccc;
  color: #fff;
}

.process-note {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.result-container {
  width: 100%;
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  /* 透明背景效果 */
  background-image: linear-gradient(45deg, #f5f5f5 25%, transparent 25%),
                   linear-gradient(-45deg, #f5f5f5 25%, transparent 25%),
                   linear-gradient(45deg, transparent 75%, #f5f5f5 75%),
                   linear-gradient(-45deg, transparent 75%, #f5f5f5 75%);
  background-size: 20rpx 20rpx;
  background-position: 0 0, 0 10rpx, 10rpx -10rpx, -10rpx 0;
}

.result-info {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0 20rpx;
  text-align: center;
}

.button-group {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 20rpx;
}

.save-button {
  background-color: #2ecc71;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  width: 48%;
}

.preview-button {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  width: 48%;
}

button:active {
  opacity: 0.8;
} 