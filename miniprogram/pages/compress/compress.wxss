/**compress.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.image-container {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-placeholder {
  width: 300rpx;
  height: 300rpx;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fafafa;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #ccc;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.selected-image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.image-info {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.8;
}

.compress-options {
  width: 100%;
  margin: 20rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.slider-container {
  margin-bottom: 30rpx;
}

.slider-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: bold;
}

.compress-button {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  transition: opacity 0.3s;
}

.compress-button:active {
  opacity: 0.8;
}

.result-container {
  width: 100%;
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.compressed-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.compression-rate {
  font-weight: bold;
  color: #2ecc71;
}

.button-group {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 20rpx;
}

.save-button {
  background-color: #2ecc71;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  width: 48%;
}

.preview-button {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  width: 48%;
}

button:active {
  opacity: 0.8;
}

/* 添加压缩程度选项的样式 */
.compress-level-group {
  width: 100%;
}

.compress-level-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.compress-level-option {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
  width: 48%;
}

.compress-level-option text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 系统提示样式 */
.system-hint {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
}

/* 节点式滑块样式 */
.slider-marks {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 5rpx;
}

.mark-item {
  text-align: center;
  flex: 1;
}

.mark-item text {
  font-size: 24rpx;
  color: #666;
}